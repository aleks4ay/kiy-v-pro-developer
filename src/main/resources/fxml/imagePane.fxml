<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" visible="false" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.aleks4ay.developer.controller.ControllerImage">
  <children>
    <AnchorPane AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <Label fx:id="description" alignment="CENTER_LEFT" prefHeight="35.0" text="Description" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
           <font> <Font size="16.0" /> </font></Label>
        <ImageView fx:id="image1" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0" />
      </children>
    </AnchorPane>
    <AnchorPane prefHeight="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <children>
        <HBox alignment="BOTTOM_LEFT" cache="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="190.0" AnchorPane.topAnchor="0.0">
          <children>
            <Button mnemonicParsing="false" onAction="#getImage" text="Выбрать файл">
              <font> <Font size="14.0" /> </font>
              <HBox.margin> <Insets right="30.0" /> </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#saveImage" text="Сохранить">
              <font> <Font size="14.0" /> </font>
            </Button>
            <Label fx:id="description_id" alignment="CENTER" text="description id">
              <HBox.margin> <Insets left="10.0" right="10.0" /> </HBox.margin>
            </Label>
            <Label fx:id="file_name" alignment="CENTER" text="file name" />
          </children>
        </HBox>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#cancelImage" text="Вернуться без сохранения" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
          <font> <Font size="14.0" /> </font>
        </Button>
      </children>
    </AnchorPane>
  </children>
</AnchorPane>
